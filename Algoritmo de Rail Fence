#include <iostream>
#include <string>
using namespace std;
int RailFence(string a, int b){
  string x2;
  x2=a;
  for(int i=0;i<=a.length();i++){
    if(i%b!=0){
      x2[i-1]=a[i+b];
    }
  
  }
  cout<<x2;
  return 0;
}
int main() {
  string x;
  int y;
  cout<<"Ingrese el mensaje a ser cifrado"<<"\n";
  cin>>x;
  cout<<"Ingrese la clave"<<"\n";
  cin>>y;
  RailFence(x,y);
}
