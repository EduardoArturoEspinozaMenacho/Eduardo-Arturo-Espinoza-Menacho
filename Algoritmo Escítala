#include <iostream>
#include <string>
using namespace std;
int function(string a, int b, int c){
  string f;
  f=a;
  for(int i=0;i<=b;i++){
      f[i-1]=a[i+b];
      for(int j=0;j<=c;j++){
        f[j]=a[j+b];
      }
  
  
  }
  cout<<f;
  return 0;
}
int main() {
  string x;
  int y;
  int z;
  cout<<"Ingrese el mensaje a ser cifrado"<<"\n";
  cin>>x;
  cout<<"Ingrese el diametro del baston"<<"\n";
  cin>>y;
 cout<<"Ingrese la longitud del baston"<<"\n";
  cin>>z;  
  function(x,y,z);
}
